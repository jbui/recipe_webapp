<div class="card">
  <h1><%= link_to recipe.name, recipe.url %></h1>
  <img src="<%= recipe.image_url %>" />

  <h2> Ingredients </h2>
  <ul class="ingredients">
  <% recipe.ingredients.split("\t").each do |i| %>
    <li><%= i %></li>
  <% end %>
  </ul>

  <h2> Directions </h2>
  <ol class="directions">
  <% recipe.directions.split("\t").each do |i| %>
    <li><%= i %></li>
  <% end %>
  </ol>
</div>